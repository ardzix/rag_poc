# Environment Configuration Template
# Copy file ini menjadi .env dan sesuaikan nilai-nilainya

# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production-to-random-string
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# SQLite (default untuk development)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# PostgreSQL (uncomment untuk production)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=noc_rag_db
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432

# SSO Configuration
SSO_BASE_URL=https://sso.arnatech.id/api
SSO_VERIFY_TOKEN_ENDPOINT=/auth/token/verify/

# DeepSeek API Configuration
# WAJIB: Ganti dengan API key Anda
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TIMEOUT=60

# Upload Settings
MAX_UPLOAD_SIZE_MB=10
# DOCUMENT_CONTEXT_MAX_LENGTH: Maksimal untuk impress client di POC
# DeepSeek context window: 64,000 tokens (~192,000 chars)
# Set 150,000 untuk aman (sisakan buffer untuk system prompt + response)
DOCUMENT_CONTEXT_MAX_LENGTH=150000

# CORS Settings (sesuaikan dengan domain frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
